<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".ui.movieDetail.MovieDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retour"
                android:textSize="18sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/movie_poster"
            android:layout_marginBottom="20dp"
            android:contentDescription="Film image" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginBottom="0dp"
            android:textColor="#303030"
            tools:text="Titre du Film" />

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#4B4B4B"
            tools:text="Résumé du Film" />

        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            tools:text="Date de Sortie" />

        <TextView
            android:id="@+id/movie_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            tools:text="Note Moyenne" />

        <TextView
            android:id="@+id/similar_movie_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Similars movies"
            app:layout_constraintTop_toBottomOf="@+id/button_back"
            app:layout_constraintBottom_toTopOf="@id/moviesRecyclerView"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginTop="25dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/similar_movie_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/similar_movie_label"

            tools:listitem="@layout/movie_vertical_item"
            />

    </LinearLayout>

</ScrollView>
